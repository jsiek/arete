fun front(ls) & { return ls[0]; }

fun rest(ls) & { return ls[1]; }

fun map(f, ls) {
  if (is_null(ls)) {
    return null;
  } else {
    return ⟨f(front(ls)), map(f, rest(ls))⟩;
  }
}

fun inc(x) { return x + 1; }

fun main() {
  let !ls1 = ⟨0, ⟨1, ⟨2, null⟩⟩⟩;
  let !ls2 = map(inc, ls1);
  let three = front(rest(rest(ls2)));
  return three - 3;
}
