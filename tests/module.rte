module M
  exports empty, push, front, rest, map
{
  def all = 1;
  def empty = null;
  fun push(data, rest) {
    return ⟨data, all of rest⟩;
  }
  fun front(ls) { return ls[0]; }
  fun rest(ls) { return ls[1]; }
  
  fun map(f, ls) {
    if (is_null(ls)) {
      return null;
    } else {
      return ⟨f(front(ls)), map(f, rest(ls))⟩;
    }
  }
}

from M import empty, push, front, rest;

fun main() {
  def !ls1 = push(0, push(1, push(2, empty)));
  def inc = fun (x) { return x + 1; };
  def !ls2 = M.map(inc, ls1); // test . operator
  def three = front(rest(rest(ls2)));
  return three - 3;
}
