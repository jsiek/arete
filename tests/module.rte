module M
  exports empty, push, front, rest, map
{
  var all = 1;
  var empty = null;
  fun push(data, rest) {
    return new data, all of rest;
  }
  fun front(ls) { return ls[0]; }
  fun rest(ls) { return ls[1]; }
  
  fun map(f, ls) {
    if (is_null(ls)) {
      return null;
    } else {
      return new f(front(ls)), map(f, rest(ls));
    }
  }
}

from M import empty, push, front, rest;

fun main() {
  var !ls1 = push(0, push(1, push(2, empty)));
  var inc = fun (x) { return x + 1; };
  var !ls2 = M.map(inc, ls1); // test . operator
  var three = front(rest(rest(ls2)));
  return three - 3;
}