module M
  exports empty, push, front, rest, map
{
  def all = 1;
  def empty = null;
  function push(data, rest) {
    return new data, all of rest;
  }
  function front(ls) { return ls[0]; }
  function rest(ls) { return ls[1]; }
  
  function map(f, ls) {
    if (is_null(ls)) {
      return null;
    } else {
      return new f(front(ls)), map(f, rest(ls));
    }
  }
}

from M import empty, push, front, rest;

function main() {
  def !ls1 = push(0, push(1, push(2, empty)));
  def inc = function (x) { return x + 1; };
  def !ls2 = M.map(inc, ls1); // test . operator
  def three = front(rest(rest(ls2)));
  return three - 3;
}
