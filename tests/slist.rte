fun listof(data) {
  return new ⟨data, null⟩;
}

fun push(data, !list) {
  return new ⟨data, 1 of list⟩;
}

fun data(node) & {
  return (*node)[0];
}

fun next(node) & {
  return (*node)[1];
}

fun is_last(node) {
  if (is_null(node)) {
    return false;
  } else {
    return is_null(next(node));
  }
}

// Split the list into two parts, with the second
// part just containing the last element.
fun remove_last(!n) {
  if (is_null(n)) {
    return null;
  } else {
    if (is_last(next(n))) {
      let !q = copy(next(1 of n)); // want all permissions to next(n)
      next(1 of n) = null;
      return q;
    } else {
      return remove_last(next(1 of n));
    }
  }
}

fun main() {
  let !one_two = push(1, listof(2));
  let !two_null = remove_last(one_two);
  let one = data(one_two);
  let two = data(two_null);
  return one + one - two;
}
